{
  "name": "electron-remote",
  "version": "1.0.0",
  "description": "Screen sharing application with remote control capabilities",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "prod": "NODE_ENV=production electron .",
    "signaling": "node signaling-server.js",
    "signaling:prod": "NODE_ENV=production node signaling-server.js",
    "dev:all": "concurrently \"npm run signaling\" \"npm run dev\"",
    "prod:all": "concurrently \"npm run signaling:prod\" \"npm run prod\"",
    "build": "electron-builder -mwl",
    "build:mac": "electron-builder --mac dmg",
    "build:win": "electron-builder --win nsis",
    "build:prod": "NODE_ENV=production electron-builder -mwl"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "electron",
    "screen-sharing",
    "remote-control",
    "webrtc",
    "websocket"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "ws": "^8.14.2",
    "@nut-tree-fork/nut-js": "^4.2.6"
  },
  "build": {
    "appId": "com.screenshare.app",
    "productName": "ScreenShare",
    "files": [
      "**/*",
      "!downloads/**",
      "!database/**",
      "!**/*.md",
      "!**/test/**",
      "!**/.git/**",
      "!**/.github/**"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    }
  }
}
